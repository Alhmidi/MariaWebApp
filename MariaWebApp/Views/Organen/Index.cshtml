@model IEnumerable<Organ>
@{ 
    ViewData ["Titel"] ="Liste von Organen";
}

<form class="form-inline my-2 my-lg-0" asp-controller="Organen" asp-action="Filter" style="padding-right: 25px;">
    <input name="searchString" type="text" class="form-control" placeholder="Such nach Organ..." aria-label="Recipient's username" aria-describedby="button-addon2">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
</form>
<div style="position:fixed;right :25px;top:75px" class="text-white">
    <a asp-controller="Organen" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Hinzufügen</a>

</div>

    <div class="row">
        <div class="col-md-6 offset-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                       
                        <th>@Html.DisplayNameFor(model => model.eMail)</th>
                        <th>@Html.DisplayNameFor(model => model.OrganCategory)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                 
                        @foreach( var item in Model)
                         {
                         <tr>
                         <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Id)

                         </td>
                         <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Name)

                         </td>
                         
                         <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.OrganCategory)

                         <td class="align-middle">
                             <a class="btn btn-outline-primary" asp-controller="Organen" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i>Bearbeiten</a> |
                             <a class="btn btn-outline-info" asp-controller="Organen" asp-action="Details" asp-route-id="@item.Id" ><i class="bi bi-eye"></i>Details </a> |
                             <a class="btn btn-danger text-white" asp-controller="Organen" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Löschen</a>
                         </td>
                         </tr>
                         }
                </tbody>
            </table>

        </div>
    </div>
