@model Person
@{

    ViewData["Titel"] = "Detials von Person";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4> Datiels von @Model.Vorname  </h4> 
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vorname" class="control-label"></label>
                        <input asp-for="Vorname" class="form-control"readonly/>
                        <span asp-validation-for="Vorname"class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nachname" class="control-label"></label>
                        <input asp-for="Nachname" class="form-control"readonly/>
                        <span asp-validation-for="Nachname"class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Strasse" class="control-label"></label>
                        <input asp-for="Strasse" class="form-control"readonly/>
                        <span asp-validation-for="Strasse"class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PLZ" class="control-label"></label>
                        <input asp-for="PLZ" class="form-control"readonly/>
                        <span asp-validation-for="PLZ"class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ort" class="control-label"></label>
                        <input asp-for="Ort" class="form-control"readonly/>
                        <span asp-validation-for="Ort"class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Land" class="control-label"></label>
                        <input asp-for="Land" class="form-control"readonly/>
                        <span asp-validation-for="Land" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label"></label>
                        <input asp-for="Telefon" class="form-control"readonly/>
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="eMail" class="control-label"></label>
                        <input asp-for="eMail" class="form-control"  readonly/>
                        <span asp-validation-for="eMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonCategory" class="control-label"></label>
                        <input asp-for="PersonCategory" class="form-control"  readonly/>
                        <span asp-validation-for="PersonCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bemerkung" class="control-label"></label>
                        <input asp-for="Bemerkung" class="form-control"  readonly/>
                        <span asp-validation-for="Bemerkung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrganId" class="control-label"></label>
                        <input asp-for="OrganId" class="form-control" readonly />
                        <span asp-validation-for="OrganId" class="text-danger"></span>       
                    </div>
                        <div class="align-middle">
                            <a class="btn btn-outline-info" asp-controller="Organen" asp-action="Details" asp-route-id="@Model.OrganId"><i class="bi bi-eye"></i>Organdetails </a>
                        </div>     
                    <br />
                    <div class="form-group">           
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Bearbeiten</a>
                        <a class="btn btn-outline-primary" asp-action="Index">Zurück</a>
                    </div>       
            </div>
        </div>
    </div>
</div>