@model IEnumerable<Person>
@using MariaWebApp.Data;
@{
    ViewData["Title"] = "Liste von Personen";
}

<form class="form-inline my-2 my-lg-0" asp-controller="Personen" asp-action="Filter" style="padding-right: 25px;">
    <input name="searchString" type="text" class="form-control" placeholder="Such nach Person..." aria-label="Recipient's username" aria-describedby="button-addon2">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
</form>

<div style="position:fixed;right :25px;top:75px" class="text-white" >
    <a asp-controller="Personen" asp-action="Create" class="btn btn-primary"  ><i class="bi bi-plus-circle"></i>Hinzufügen</a>

</div>
<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr >
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Vorname)</th>
                    <th>@Html.DisplayNameFor(model => model.Nachname)</th>
                    <th>@Html.DisplayNameFor(model => model.PersonCategory)</th>
                    <th>@Html.DisplayNameFor(model => model.OrganId)</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)

                {
                    <tr>
                        <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Id)

                        </td>
                        <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Vorname)

                        </td>
                        <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Nachname)

                        </td>
                        
                        <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.PersonCategory)

                        <td class="class=" align-middle">

                            @Html.DisplayFor(modelItem => item.Organ.Id)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Personen" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Bearbeiten</a> |
                            <a class="btn btn-outline-info" asp-controller="Personen" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-controller="Personen" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Löschen</a>
                        </td>
                    </tr>
                 }      
            </tbody>
        </table>
    </div>
</div>

