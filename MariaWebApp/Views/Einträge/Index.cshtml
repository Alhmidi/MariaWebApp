@model IEnumerable<Eintrag>
@{
    ViewData["Titel"] = "Liste von Einträgen";
}
<div style="position:fixed;left :25px;top:75px" class="text-white" >
<a asp-controller="Einträge" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Hinzufügen</a>
</div>
<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr @*class="text-center"*@>

                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.CreateDatetime)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                 <tr>
                    <td class="class=" align-middle">

                        @Html.DisplayFor(modelItem => item.Id)

                    </td>
                    <td class="class=" align-middle">

                        @Html.DisplayFor(modelItem => item.CreateDatetime)

                    </td>
                   
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Einträge" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>Bearbeiten
                        </a> |
                        <a class="btn btn-outline-info" asp-controller="Einträge" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i>Details
                        </a> |
                        <a class="btn btn-danger text-white" asp-controller="Einträge" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>Löschen
                        </a>
                    </td>
                </tr>
                 }

            </tbody>
        </table>

    </div>
</div>
